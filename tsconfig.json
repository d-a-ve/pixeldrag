{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "./src",
    "paths": {
      "@components/*": ["./components/*"],
      "@context/*": ["./context/*"],
      "@hooks/*": ["./hooks/*"],
      "@routes/*": ["./routes/*"],
      "@utils/*": ["./utils/*"],
      "@pages/*": ["./pages/*"],
      "@myTypes/*": ["./myTypes/*"],
      "@config/*": ["./config/*"],

      "@constants": ["./constants"]
    }
  },
  "include": ["./src"]
}
